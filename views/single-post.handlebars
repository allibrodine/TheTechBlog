<article class="post">
    <div class="title">
        <p>{{post.title}}</p>
        <span>{{post.post_text}}</span>
    </div>
    <div class="meta">
        Posted by {{post.user.username}} on {{post.createdAt}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>
</article>

<!--only logged in users can see this-->
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{createdAt}}
        </div>
        <div class="comment-text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>

<!--only needed for logged in users-->
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}